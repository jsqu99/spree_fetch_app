<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<h1><%= t(:fetch_app_settings) %></h1>

  <%= link_to t(:fetch_app_signup), 'http://www.fetchapp.com/' %>

<%= form_tag admin_fetch_app_settings_path, :method => :put do %>

    <%= label_tag('app_name', t(:fetch_app_app_name) + ': ') + tag(:br) %>
    <%# I wanted to use preference_field_tag, but the text field size is locked in at 10! %>
    <%= text_field_tag 'preferences[app_name]', SpreeFetchApp::Config[:app_name], :size => "30", :class => "input_string" %>
    <br/>

    <%= label_tag('api_key', t(:fetch_app_api_key) + ': ') + tag(:br) %>
    <%= text_field_tag 'preferences[api_key]', SpreeFetchApp::Config[:api_key], :size => "20", :class => "input_string" %>
    <br/>

    <%= label_tag('api_token', t(:fetch_app_api_token) + ': ') + tag(:br) %>
    <%= text_field_tag 'preferences[api_token]', SpreeFetchApp::Config[:api_token], :size => "20", :class => "input_string" %>
    <br/>

    <%= label_tag('push_on_order_complete', t(:fetch_app_push_on_order_complete) + ': ') + tag(:br) %>
    <%= hidden_field_tag('preferences[push_on_order_complete]', 0) %>
    <%= check_box_tag 'preferences[push_on_order_complete]', 1, SpreeFetchApp::Config[:push_on_order_complete], :size => "20", :class => "input_string" %>
    <br/>

  <p class="form-buttons">
    <%= button t(:update) %>
    <%= t(:or) %> <%= link_to t(:cancel), admin_fetch_app_settings_url %>
  </p>

<% end %>
